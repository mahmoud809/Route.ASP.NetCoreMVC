<!-- First of All we should Determined the type of data   -->
@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "All Departments";
}

<h1>All Departments</h1>
<br/>
<br/>
<a asp-controller="Department" asp-action="Create" class="btn btn-primary mb-3"> Create New Department</a>
<br/>

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
           @foreach(var department in Model)
            {
                <tr>

                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    
                    <partial name="_ButtonsPartialView" model="@department.Id"/>

                </tr>

            }
        </tbody>
    </table>
  
}
else
{
    <div class="alert alert-warning">
        There Is No Departments :(
    </div>
   
}



