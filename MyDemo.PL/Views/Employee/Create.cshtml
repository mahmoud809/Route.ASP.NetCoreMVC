@model Employee;
@{
    ViewData["Title"] = "Create";
}


<h1>Add A New Employee</h1>
<br />

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Create">
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control mb-3" asp-for="Salary" />

    </div>

    <div>
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div>
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control mb-3" asp-for="Email" />

    </div>
    
    <div>
        <label class="col-form-label" asp-for="Phone"></label>
        <input class="form-control mb-3" asp-for="Phone" />

    </div>
   
    <div>
        <label class="col-form-label" asp-for="HireDate"></label>
        <input class="form-control mb-3" asp-for="HireDate" />

    </div>
   
    <div>
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control mb-3" asp-for="DateOfCreation" />

    </div>

    <div>
        <label class="col-form-label" asp-for="IsActive"></label>
        <input class="mb-3" asp-for="IsActive" />

    </div>
    <input type="submit" value="Create" class="btn btn-outline-primary" /> |
    <a class="btn btn-light" asp-controller="Employee" asp-action="Index">Back To List</a>

</form>

@section ValidateScriptSection
{
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}