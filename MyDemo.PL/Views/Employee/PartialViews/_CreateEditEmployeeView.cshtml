@model Employee

@{
    var departments = new SelectList(ViewData["Departments"] as IEnumerable<Department>, "Id", "Name");
}

<div>
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control mb-3" asp-for="Salary" />

</div>

<div>
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control mb-3" asp-for="Email" />

</div>

<div>
    <label class="col-form-label" asp-for="Phone"></label>
    <input class="form-control mb-3" asp-for="Phone" />

</div>

<div>
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control mb-3" asp-for="HireDate" />

</div>

<div>
    <label class="col-form-label" asp-for="DateOfCreation"></label>
    <input class="form-control mb-3" asp-for="DateOfCreation" />

</div>

<div>
    <label class="col-form-label" asp-for="IsActive"></label>
    <input class="mb-3" asp-for="IsActive" />

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@departments">
      <option value="@null">-- Select Department --</option>
    </select>
</div>