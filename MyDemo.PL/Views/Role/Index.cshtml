@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<br />

<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-success mb-3"> Create New Role</a>
<br />

<div class="row justify-content-center align-items-center mb-5 mt-3">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input class="form-control" type="text" name="name" placeholder="Search By Name..." />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-outline-success" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.RoleName)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr class="text-center">

                    <td>@Html.DisplayFor(M => role.Id)</td>
                    <td>@Html.DisplayFor(M => role.RoleName)</td>
                    
                    
                    <partial name="_ButtonsPartialView" model="@role.Id" />

                </tr>

            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">
        There Is No Roles :(
    </div>

}

