@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>
<br />

<div class="row justify-content-center align-items-center mb-5 mt-3">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input class="form-control" type="text" name="email" placeholder="Search By Email..." />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-outline-success" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U => U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="text-center">

                    <td>@Html.DisplayFor(M => user.Id)</td>
                    <td>@Html.DisplayFor(M => user.FName)</td>
                    <td>@Html.DisplayFor(M => user.LName)</td>
                    <td>@Html.DisplayFor(M => user.Email)</td>
                    <td>@Html.DisplayFor(M => user.PhoneNumber)</td>
                    <td>@string.Join("," , user.Roles)</td>
                    


                    <partial name="_ButtonsPartialView" model="@user.Id" />

                </tr>

            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">
        There Is No Users :(
    </div>

}

